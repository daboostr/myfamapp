# Environment Configuration for OneDrive Photo Gallery

# Application Settings
NEXT_PUBLIC_APP_NAME=OneDrive Photo Gallery
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=M365-style OneDrive photo sharing website

# Azure AD / MSAL Configuration
NEXT_PUBLIC_AZURE_CLIENT_ID=your-azure-client-id-here
NEXT_PUBLIC_AZURE_TENANT_ID=your-tenant-id-here
NEXT_PUBLIC_AZURE_REDIRECT_URI=https://your-domain.com
NEXT_PUBLIC_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Microsoft Graph API
NEXT_PUBLIC_GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0
NEXT_PUBLIC_GRAPH_SCOPES=User.Read,Files.Read.All

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_BUNDLE_SIZE_LIMIT_KB=100

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_A11Y_TESTING=false

# Build Configuration
NODE_ENV=production
ANALYZE=false

# Security
NEXT_PUBLIC_CSP_REPORT_URI=
NEXT_PUBLIC_SECURITY_HEADERS=true

# Deployment
NEXT_PUBLIC_DEPLOY_ENV=production
NEXT_PUBLIC_BUILD_TIME=
NEXT_PUBLIC_COMMIT_SHA=