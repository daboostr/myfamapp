# Development Environment Configuration

# Application Settings  
NEXT_PUBLIC_APP_NAME=OneDrive Photo Gallery (Dev)
NEXT_PUBLIC_APP_VERSION=1.0.0-dev
NEXT_PUBLIC_APP_DESCRIPTION=M365-style OneDrive photo sharing website - Development

# Azure AD / MSAL Configuration (Development)
NEXT_PUBLIC_AZURE_CLIENT_ID=dev-azure-client-id
NEXT_PUBLIC_AZURE_TENANT_ID=dev-tenant-id
NEXT_PUBLIC_AZURE_REDIRECT_URI=http://localhost:3000
NEXT_PUBLIC_AZURE_AUTHORITY=https://login.microsoftonline.com/dev-tenant-id

# Microsoft Graph API
NEXT_PUBLIC_GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0
NEXT_PUBLIC_GRAPH_SCOPES=User.Read,Files.Read.All

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_BUNDLE_SIZE_LIMIT_KB=100

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_A11Y_TESTING=true
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true

# Build Configuration
NODE_ENV=development
ANALYZE=false

# Security (Relaxed for development)
NEXT_PUBLIC_CSP_REPORT_URI=
NEXT_PUBLIC_SECURITY_HEADERS=false

# Deployment
NEXT_PUBLIC_DEPLOY_ENV=development
NEXT_PUBLIC_BUILD_TIME=
NEXT_PUBLIC_COMMIT_SHA=